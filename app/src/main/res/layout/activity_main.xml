<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/main_enclosing_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/post_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/instagram_cursive_main"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_gravity="left"
            app:tint="@color/colorAccent"
            android:src="@drawable/ic_instagram_wordmark" />

        <Button
            android:id="@+id/signout_appbar_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_logout"
            android:backgroundTint="@color/white"
            />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/new_post_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_below="@id/post_toolbar">

        <ProgressBar
            android:id="@+id/posting_loading_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible" />

        <Button
            android:id="@+id/take_picture_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/take_picture"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/uploaded_picture_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/take_picture_button"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/caption_edittext_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploaded_picture_image_view"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:hint="@string/caption_hint"
            android:inputType="text" />

        <Button
            android:id="@+id/submit_post_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caption_edittext_view"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/submit_post"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>